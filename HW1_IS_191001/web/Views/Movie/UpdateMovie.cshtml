@model domain.DomainModels.Movie
<div class="container border border-dark rounded mt-4">
    <h1 class="text-center mt-2">Edit the movie: @Model.Name</h1>
    <hr />
    <form action="/Movie/UpdateMovie" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <label for="name">Movie name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="" value="@Model.Name" required="required">
        </div>
        <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="" value="@Model.ImageUrl" required="required">
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="category">Category</label>
                <select class="form-control" id="category" name="category" required="required">
                    <option value="">--Select a category--</option>
                    @foreach (var c in ViewBag.categories)
                    {


                        @if (c == Model.Category.ToString())
                        {
                            <option value="@c" selected>@c</option>
                        }
                        else
                        {
                            <option value="@c">@c</option>
                        }

                    }
                </select>
            </div>
            <div class="form-group col-6">
                <label for="rating">Rating</label>
                <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" required="required" value="@Model.Rating" step="0.1">
            </div>
        </div>
        <div class="row">
            <div class="col-6 justify-content-center">
                <a href="/Movie/ListAllMovies" class="text-white btn btn-danger btn-block btn-lg mb-2">Cancel</a>
            </div>
            <div class="col-6 justify-content-center">
                <button type="submit" class="btn btn-success btn-block btn-lg mb-2">Submit</button>
            </div>
        </div>

    </form>
</div>


