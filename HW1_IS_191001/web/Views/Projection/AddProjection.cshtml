<div class="container border border-dark rounded mt-4">
    <h1 class="text-center mt-2">Add a new projection for the movie: @ViewBag.Movie.Name</h1>
    <hr />
    <form method="post" action="/Projection/AddProjection">
        <input type="hidden" value="@ViewBag.Movie.Id" name="movieId"/>
        <div class="row">
            <div class="form-group col-4">
                <label for="name">Date and Time</label>
                <input class="form-control" type="datetime-local" name="dateAndTime" id="dateAndTime" required="required" />
            </div>
            <div class="form-group col-4">
                <label for="dateAndTime">Available Tickets</label>
                <input class="form-control" type="number" min="1" name="availableTickets" id="dateAndTime" required="required" />
            </div>
            <div class="form-group col-4">
                <label for="price">Price</label>
                <input class="form-control" type="number" min="1" name="price" id="price" required="required" />
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-6 justify-content-center">
                <a href="/Movie/ViewMovie/@ViewBag.Movie.Id" class="text-white btn btn-danger btn-block btn-lg mb-2">Cancel</a>
            </div>
            <div class="col-6 justify-content-center">
                <button type="submit" class="btn btn-success btn-block btn-lg mb-2">Submit</button>
            </div>
        </div>
    </form>
</div>
