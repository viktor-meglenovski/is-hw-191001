@model domain.DTO.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container col-8 offset-2 border border-dark rounded mt-4">
    <h1 class="text-center mt-2">Login</h1>
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv">

            <div class="form-group ">
                <label asp-for="@Model.Email" class="control-label"></label>
                <br>
                <div class="">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <br>
                <div class="">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="btn-submit">
                    <button type="submit" class="btn btn-success btn-block btn-lg">Login</button>
                    <a asp-action="Register" asp-controller="Account" class="btn btn-primary btn-block btn-lg">Don't have an account? Click to Register</a>

                </div>
            </div>
        </div>
    </form>
</div>